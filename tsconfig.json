{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "moduleResolution": "nodenext",
    "module": "nodenext",
    "removeComments": true,
    "rootDir": "src",
    "skipLibCheck": true,
    "strict": true,
    "target": "ES2020"
  },
  "exclude": [
    "dist"
  ],
  "include": [
    "src"
  ]
}